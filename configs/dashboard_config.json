{
  "config_version": "2.0.0",
  "architecture_compliance": "adapter_optimized",
  "metadata": {
    "last_updated": "2024-01-15",
    "cache_ttl_seconds": 1800,
    "validation_enabled": true,
    "performance_monitoring": true
  },
  "server": {
    "default_host": "127.0.0.1",
    "default_port": 8050,
    "debug_mode": false,
    "auto_reload": false,
    "worker_processes": 1,
    "max_connections": 100,
    "request_timeout": 30,
    "static_file_caching": true
  },
  "application": {
    "title": "Mining Reliability Dashboard",
    "version": "2.0.0",
    "description": "Professional operational intelligence platform",
    "author": "Mining Analytics Team",
    "favicon": "/assets/favicon.ico",
    "theme": "professional",
    "language": "en",
    "timezone": "UTC"
  },
  "adapter_configuration": {
    "data_adapter": {
      "cache_ttl_seconds": 300,
      "retry_attempts": 3,
      "timeout_seconds": 10,
      "batch_size": 1000,
      "parallel_queries": true
    },
    "workflow_adapter": {
      "cache_ttl_seconds": 600,
      "retry_attempts": 2,
      "timeout_seconds": 15,
      "stage_analysis_cache": true,
      "precompute_dependencies": true
    },
    "facility_adapter": {
      "cache_ttl_seconds": 900,
      "retry_attempts": 3,
      "timeout_seconds": 20,
      "comparison_cache": true,
      "causal_analysis_cache": true
    },
    "config_adapter": {
      "cache_ttl_seconds": 3600,
      "validation_enabled": true,
      "schema_validation": true,
      "performance_optimization": true
    }
  },
  "performance": {
    "query_timeout_warning": 5.0,
    "cache_ttl_seconds": 300,
    "max_concurrent_queries": 10,
    "memory_limit_mb": 512,
    "response_time_targets": {
      "portfolio_metrics": 100,
      "facility_analysis": 200,
      "workflow_analysis": 300,
      "component_render": 50
    },
    "monitoring": {
      "enabled": true,
      "log_slow_queries": true,
      "performance_alerts": true,
      "memory_monitoring": true
    }
  },
  "caching": {
    "enabled": true,
    "backend": "memory",
    "redis_config": {
      "host": "localhost",
      "port": 6379,
      "db": 0,
      "password": null
    },
    "cache_strategies": {
      "configuration": 3600,
      "schema_data": 1800,
      "facility_data": 600,
      "analysis_results": 300
    },
    "cache_invalidation": {
      "automatic": true,
      "manual_endpoints": true,
      "time_based": true
    }
  },
  "validation": {
    "architecture_validation": {
      "enabled": true,
      "auto_run": false,
      "compliance_threshold": 0.95,
      "function_size_checking": true,
      "dependency_flow_validation": true
    },
    "performance_validation": {
      "enabled": true,
      "response_time_monitoring": true,
      "memory_usage_tracking": true,
      "bottleneck_detection": true
    },
    "integration_validation": {
      "enabled": true,
      "data_flow_testing": true,
      "adapter_connectivity": true,
      "component_rendering": true
    },
    "data_validation": {
      "schema_compliance": true,
      "field_type_checking": true,
      "required_field_validation": true,
      "relationship_integrity": true
    }
  },
  "routing": {
    "url_validation": {
      "enabled": true,
      "facility_existence_check": true,
      "route_caching": true
    },
    "navigation": {
      "dynamic_facility_routes": true,
      "breadcrumb_generation": true,
      "deep_linking": true
    },
    "error_handling": {
      "404_redirect": "/",
      "error_page_customization": true,
      "logging_enabled": true
    }
  },
  "security": {
    "csrf_protection": false,
    "secure_headers": true,
    "content_security_policy": false,
    "rate_limiting": {
      "enabled": false,
      "requests_per_minute": 60
    },
    "input_sanitization": true,
    "sql_injection_protection": true
  },
  "logging": {
    "level": "INFO",
    "format": "structured",
    "file_logging": {
      "enabled": true,
      "file_path": "logs/dashboard.log",
      "max_file_size": "10MB",
      "backup_count": 5
    },
    "console_logging": {
      "enabled": true,
      "colored_output": true
    },
    "performance_logging": {
      "enabled": true,
      "slow_query_threshold": 1000,
      "memory_usage_logging": true
    },
    "error_logging": {
      "enabled": true,
      "stack_trace": true,
      "context_capture": true
    }
  },
  "ui_configuration": {
    "default_theme": "professional",
    "responsive_design": true,
    "animation_enabled": true,
    "loading_indicators": true,
    "error_boundaries": true,
    "accessibility_compliance": true
  },
  "data_export": {
    "enabled": true,
    "formats": ["csv", "excel", "json"],
    "max_export_records": 10000,
    "compression": true,
    "filename_templates": {
      "portfolio": "portfolio_analysis_{date}",
      "facility": "facility_{facility_id}_{date}",
      "workflow": "workflow_analysis_{date}"
    }
  },
  "analytics": {
    "usage_tracking": false,
    "performance_analytics": true,
    "error_analytics": true,
    "user_journey_tracking": false
  },
  "integration": {
    "external_apis": {
      "enabled": false,
      "timeout": 30,
      "retry_attempts": 3
    },
    "webhook_support": false,
    "event_streaming": false
  },
  "maintenance": {
    "health_check_endpoint": "/health",
    "status_monitoring": true,
    "automatic_cleanup": {
      "enabled": true,
      "log_retention_days": 30,
      "cache_cleanup_interval": 3600
    }
  },
  "development": {
    "hot_reload": false,
    "debug_toolbar": false,
    "profiling": false,
    "mock_data": false,
    "test_mode": false
  },
  "compliance": {
    "mdc_architecture": {
      "enabled": true,
      "core_adapter_component_flow": true,
      "function_size_limits": true,
      "zero_hardcoding": true,
      "schema_driven": true
    },
    "performance_standards": {
      "sub_second_response": true,
      "memory_efficiency": true,
      "scalability_patterns": true
    },
    "code_quality": {
      "type_safety": true,
      "error_handling": true,
      "documentation_standards": true,
      "testing_coverage": true
    }
  }
}
