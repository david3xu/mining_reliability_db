{
  "charts_version": "2.0.0",
  "architecture_compliance": "chart_base_optimized",
  "metadata": {
    "last_updated": "2025-06-02",
    "cache_ttl_seconds": 1200,
    "micro_component_support": true,
    "adapter_integration": true
  },
  "font_family": "Arial, sans-serif",
  "default_height": 400,
  "default_width": null,
  "title_font_size": 18,
  "subtitle_font_size": 14,
  "body_font_size": 14,
  "caption_font_size": 12,
  "micro_component_configs": {
    "component_margin": "15px",
    "metric_card": {
      "adapter_config": "config_adapter.get_metric_card_styling",
      "dimensions": {
        "height": 120,
        "width": 220,
        "padding": 20,
        "border_radius": 8
      },
      "typography": {
        "value_font_size": 32,
        "label_font_size": 14,
        "detail_font_size": 12,
        "font_weight_value": "bold",
        "font_weight_label": "normal"
      },
      "responsive_config": {
        "mobile_width": "100%",
        "mobile_height": 100,
        "tablet_width": 180
      }
    },
    "chart_base": {
      "adapter_config": "config_adapter.get_chart_styling_template",
      "pie_chart": {
        "default_height": 400,
        "show_legend": true,
        "text_info": "label+percent",
        "text_position": "inside",
        "hole_size": 0,
        "hover_template": "<b>%{label}</b><br>Value: %{value}<br>Percentage: %{percent}<extra></extra>"
      },
      "bar_chart": {
        "default_height": 400,
        "orientation": "vertical",
        "show_values": true,
        "text_position": "outside",
        "hover_template": "<b>%{x}</b><br>Value: %{y}<extra></extra>"
      },
      "layout_template": {
        "margin": { "l": 60, "r": 30, "t": 60, "b": 60 },
        "paper_bgcolor": "#FFFFFF",
        "plot_bgcolor": "#FFFFFF",
        "font": {
          "family": "Arial, sans-serif",
          "size": 14,
          "color": "#333333"
        }
      }
    },
    "table_base": {
      "adapter_config": "config_adapter.get_styling_config",
      "default_page_size": 10,
      "sort_action": "native",
      "cell_selectable": true,
      "row_selectable": "single",
      "style_optimization": {
        "cell_padding": "12px",
        "font_size": 14,
        "text_align": "center"
      }
    }
  },
  "chart_templates": {
    "portfolio_pie_chart": {
      "component": "chart_base.create_pie_chart",
      "adapter_data": "data_adapter.get_facility_breakdown",
      "title": "Facility Distribution",
      "config": {
        "height": 400,
        "colors": ["#4A90E2", "#F5A623", "#7ED321", "#B57EDC"],
        "text_info": "label+percent",
        "hover_info": "label+value+percent"
      },
      "interactivity": {
        "click_enabled": true,
        "click_handler": "facility_navigation",
        "hover_effects": true
      }
    },
    "field_distribution_bar": {
      "component": "chart_base.create_bar_chart",
      "adapter_data": "data_adapter.get_field_distribution",
      "title": "Data Types Distribution",
      "config": {
        "height": 400,
        "orientation": "vertical",
        "color": "#4A90E2",
        "show_values": true
      },
      "interactivity": {
        "click_enabled": true,
        "click_handler": "field_analysis_navigation"
      }
    },
    "workflow_completion_chart": {
      "component": "chart_base.create_bar_chart",
      "adapter_data": "workflow_adapter.get_entity_field_distribution",
      "title": "Workflow Stage Completion",
      "config": {
        "height": 400,
        "orientation": "horizontal",
        "colors": ["#4A90E2", "#F5A623", "#7ED321", "#B57EDC", "#D32F2F"]
      }
    },
    "facility_quality_comparison": {
      "component": "chart_base.create_bar_chart",
      "adapter_data": "facility_adapter.get_facility_statistics_analysis",
      "title": "Facility Quality Comparison",
      "config": {
        "height": 400,
        "color": "#7ED321",
        "show_values": true
      }
    },
    "causal_frequency_chart": {
      "component": "chart_base.create_bar_chart",
      "adapter_data": "facility_adapter.get_facility_causal_intelligence",
      "title": "Root Cause Frequency",
      "config": {
        "height": 400,
        "orientation": "horizontal",
        "color": "#F5A623",
        "top_n": 10
      }
    }
  },
  "table_templates": {
    "historical_timeline": {
      "component": "table_base.create_data_table",
      "adapter_data": "data_adapter.get_historical_timeline",
      "config": {
        "page_size": 10,
        "sortable": true,
        "cell_clickable": true,
        "row_selectable": true
      },
      "interactivity": {
        "cell_click_handler": "facility_navigation",
        "row_selection_handler": "row_analysis"
      }
    },
    "quality_summary": {
      "component": "table_base.create_data_table",
      "adapter_data": "data_quality.create_quality_summary_table",
      "config": {
        "page_size": 15,
        "conditional_formatting": true,
        "status_colors": {
          "Excellent": "#E8F5E8",
          "Good": "#FFF8E1",
          "Needs Attention": "#FFE6E6"
        }
      }
    },
    "facility_root_causes": {
      "component": "table_base.create_data_table",
      "adapter_data": "facility_detail.create_operating_centre_table",
      "config": {
        "page_size": 20,
        "sortable": true,
        "impact_highlighting": true
      }
    }
  },
  "layout_configurations": {
    "standard_dashboard": {
      "metrics_row": {
        "component_count": 4,
        "spacing": "gap-3",
        "responsive": "d-flex justify-content-center flex-wrap"
      },
      "charts_grid": {
        "columns": 2,
        "gap": "30px",
        "responsive_breakpoint": "md"
      },
      "table_section": {
        "full_width": true,
        "margin_top": "30px"
      }
    },
    "facility_detail": {
      "header_metrics": {
        "component_count": 4,
        "layout": "horizontal"
      },
      "analysis_grid": {
        "columns": 2,
        "equal_height": true
      },
      "detail_table": {
        "full_width": true,
        "enhanced_features": true
      }
    }
  },
  "interaction_config": {
    "chart_interactions": {
      "mode_bar": {
        "display": true,
        "buttons_to_remove": ["pan2d", "lasso2d"],
        "display_logo": false
      },
      "click_events": {
        "facility_pie": "navigate_to_facility",
        "field_bar": "navigate_to_field_analysis"
      },
      "hover_effects": {
        "enabled": true,
        "delay": 200,
        "custom_templates": true
      }
    },
    "table_interactions": {
      "cell_selection": {
        "enabled": true,
        "handler": "cell_click_navigation"
      },
      "row_selection": {
        "mode": "single",
        "handler": "row_analysis"
      },
      "sorting": {
        "enabled": true,
        "multi_column": false
      }
    }
  },
  "performance_optimization": {
    "rendering": {
      "lazy_loading": true,
      "virtual_scrolling": true,
      "chart_animation": false
    },
    "data_handling": {
      "max_points_before_sampling": 1000,
      "efficient_color_mapping": true,
      "memory_optimization": true
    },
    "caching": {
      "chart_config_cache": true,
      "layout_cache": true,
      "interaction_cache": true
    }
  },
  "responsive_design": {
    "breakpoints": {
      "mobile": 768,
      "tablet": 1024,
      "desktop": 1200
    },
    "chart_scaling": {
      "mobile_height_factor": 0.8,
      "mobile_font_factor": 0.9,
      "tablet_height_factor": 0.9
    },
    "table_responsive": {
      "horizontal_scroll": true,
      "column_priority": ["name", "value", "status"],
      "mobile_page_size": 5
    }
  },
  "accessibility": {
    "color_blind_support": {
      "enabled": true,
      "pattern_alternatives": true
    },
    "screen_reader": {
      "alt_text_generation": true,
      "table_headers": true,
      "chart_summaries": true
    },
    "keyboard_navigation": {
      "tab_order": true,
      "focus_indicators": true
    }
  },
  "validation_config": {
    "chart_validation": {
      "required_fields": ["labels", "values"],
      "data_type_checking": true,
      "empty_data_handling": true
    },
    "performance_thresholds": {
      "max_render_time_ms": 1000,
      "max_data_points": 5000,
      "memory_limit_mb": 50
    },
    "adapter_integration": {
      "verify_adapter_methods": true,
      "data_contract_validation": true,
      "error_boundary_testing": true
    }
  },
  "feature_flags": {
    "advanced_charting": true,
    "real_time_updates": false,
    "3d_visualizations": false,
    "export_functionality": true,
    "chart_annotations": true,
    "interactive_legends": true
  }
}
