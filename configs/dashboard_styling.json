        "display": "grid",
        "grid_template_columns": "1fr 1fr",
        "gap": "30px",
        "margin_bottom": "30px"
      },
      "responsive_breakpoints": {
        "mobile": {
          "grid_template_columns": "1fr",
          "gap": "20px"
        }
      }
    },
    "workflow_analysis": {
      "stage_container": {
        "display": "flex",
        "justify_content": "space-between",
        "align_items": "center",
        "flex_wrap": "wrap",
        "gap": "20px"
      },
      "connection_arrows": {
        "color": "#666666",
        "font_size": "24px",
        "margin": "0 10px"
      }
    },
    "data_quality": {
